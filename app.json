{
  "expo": {
    "name": "leafy",
    "slug": "leafy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/leafLogo.png",
    "userInterfaceStyle": "light",
    "fonts": [
  {
    "asset": "/assets/fonts/Roboto-Black.ttf",
    "fontFamily": "RBlack"
  },
  {
    "asset": "/assets/fonts/Roboto-BlackItalic.ttf",
    "fontFamily": "RBlackI"
  },
  {
    "asset": "/assets/fonts/Roboto-Bold.ttf",
    "fontFamily": "RB"
  },
  {
    "asset": "/assets/fonts/Roboto-BoldItalic.ttf",
    "fontFamily": "RBI"
  },{
    "asset": "/assets/fonts/Roboto-Italic.ttf",
    "fontFamily": "RI"
  },{
    "asset": "/assets/fonts/Roboto-Light.ttf",
    "fontFamily": "RL"
  },{
    "asset": "/assets/fonts/Roboto-LightItalic.ttf",
    "fontFamily": "RLI"
  },{
    "asset": "/assets/fonts/Roboto-Medium.ttf",
    "fontFamily": "RM"
  },{
    "asset": "/assets/fonts/Roboto-MediumItalic.ttf",
    "fontFamily": "RMI"
  },{
    "asset": "/assets/fonts/Roboto-Regular.ttf",
    "fontFamily": "RR"
  },{
    "asset": "/assets/fonts/Roboto-RegularItalic.ttf",
    "fontFamily": "RRI"
  }
  ,{
    "asset": "/assets/fonts/Roboto-Thin.ttf",
    "fontFamily": "RT"
  },{
    "asset": "/assets/fonts/Roboto-ThinItalic.ttf",
    "fontFamily": "RTI"
  }

],
    "splash": {
      "image": "./assets/images/Splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.leopard.leafy",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "UIBackgroundModes": [
          "fetch",
          "remote-notification"
        ],
        "NSCameraUsageDescription": "Allow access to the camera",
        "NSPhotoLibraryUsageDescription": "Allow access to the photo library",
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": ["com.googleusercontent.apps.221059836769-t9fc1c28ruud8admu7eghqkdf9lcaa44"]
          }
        ]
      },
      "supportsTablet": true
    },
    "android": {
      "package": "com.leopard.leafy",
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["CAMERA", "READ_EXTERNAL_STORAGE", "WRITE_EXTERNAL_STORAGE"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ],
      "@react-native-firebase/app"
    ],
    "extra": {
      "eas": {
        "projectId": "cbf6937f-23fc-4c72-9db7-abe1e33bd775"
      }
    },
    "owner": "bharathreddy",
    "scheme":"leafy"
  }
}
